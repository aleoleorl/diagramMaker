    <UseWPF>true</UseWPF>
	<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="assets\item01.png" />
    <None Remove="assets\item02.png" />
    <None Remove="assets\item03.png" />
    <None Remove="assets\item04.png" />
    <None Remove="assets\item05.png" />
    <None Remove="assets\item06.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="assets\item01.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\item02.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\item03.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\item04.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\item05.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
